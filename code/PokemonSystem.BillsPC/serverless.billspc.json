{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "An AWS Serverless Application that uses the ASP.NET Core framework running in Amazon Lambda.",
  "Parameters": {
    "DomainParameter": {
      "Type": "String",
      "Description": "Enter your domain. Example: google.com"
    },
    "CertificateIdParameter": {
      "Type": "String",
      "Description": "Enter your Certificate Id."
    }
  },
  "Conditions": {},
  "Resources": {
    "PokemonApi": {
      "Type": "AWS::Serverless::Api",
      "Properties": {
        "StageName": "Prod",
        "Cors": {
          "AllowHeaders": "'Content-Type'",
          "AllowMethods": "'GET,POST,OPTIONS'",
          "AllowOrigin": "'*'"
        },
        "Domain": {
          "CertificateArn": { "Fn::Sub": "arn:aws:acm:${AWS::Region}:${AWS::AccountId}:certificate/${CertificateIdParameter}" },
          "DomainName": { "Fn::Sub": "pokemon-billspc.${DomainParameter}" }
        }
      }
    },
    "GetLastPokemonsRest": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "PokemonSystem.BillsPC::PokemonSystem.BillsPC.Application.Functions.GetLastPokemonsFunction::GetLastPokemonsRestAsync",
        "Runtime": "dotnet6",
        "CodeUri": "",
        "MemorySize": 512,
        "Timeout": 30,
        "Role": { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/LambdaExecutionRole" },
        "Events": {
          "CreateRootResource": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "PokemonApi" },
              "Path": "/",
              "Method": "GET"
            }
          }
        }
      }
    },
    "GetPokemonRest": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "PokemonSystem.BillsPC::PokemonSystem.BillsPC.Application.Functions.GetPokemonFunction::GetPokemonRestAsync",
        "Runtime": "dotnet6",
        "CodeUri": "",
        "MemorySize": 512,
        "Timeout": 30,
        "Role": { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/LambdaExecutionRole" },
        "Events": {
          "CreateRootResource": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "PokemonApi" },
              "Path": "/{id}",
              "Method": "GET"
            }
          }
        }
      }
    },
    "CreatePokemonRest": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "PokemonSystem.BillsPC::PokemonSystem.BillsPC.Application.Functions.CreatePokemonFunction::CreatePokemonRestAsync",
        "Runtime": "dotnet6",
        "CodeUri": "",
        "MemorySize": 512,
        "Timeout": 30,
        "Role": { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/LambdaExecutionRole" },
        "Events": {
          "CreateRootResource": {
            "Type": "Api",
            "Properties": {
              "RestApiId": { "Ref": "PokemonApi" },
              "Path": "/Create",
              "Method": "POST"
            }
          }
        }
      }
    },
    "CreatePokemonSQS": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "PokemonSystem.BillsPC::PokemonSystem.BillsPC.Application.Functions.CreatePokemonFunction::CreatePokemonSQSAsync",
        "Runtime": "dotnet6",
        "CodeUri": "",
        "MemorySize": 512,
        "Timeout": 30,
        "Role": { "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/LambdaExecutionRole" },
        "Events": {
          "PokemonLearnedMoveSQSEvent": {
            "Type": "SQS",
            "Properties": {
              "Queue": { "Fn::Sub": "arn:aws:sqs:${AWS::Region}:${AWS::AccountId}:BillsPCPokemonCreatedQueue.fifo" },
              "BatchSize": 10
            }
          }
        }
      }
    },
    "EvolvePokemonRest": {
      "Type": "AWS::Serverless::Function",
